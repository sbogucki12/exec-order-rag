# Vector store settings
VECTOR_DB_PATH=data/vector_store.json
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Document processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Azure Search settings
AZURE_SEARCH_SERVICE=your-azure-search-service-name
AZURE_SEARCH_INDEX_NAME=rag-index
AZURE_SEARCH_API_KEY=your-azure-search-api-key
AZURE_SEARCH_API_VERSION=2023-07-01-Preview

# LLM Provider Selection
# Options: "azure_openai", "azure_ai_foundry"
LLM_PROVIDER=azure_ai_foundry

# Azure OpenAI settings
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-07-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-35-turbo

# Azure AI Foundry settings (open source models)
AZURE_AI_FOUNDRY_API_KEY=your-azure-ai-foundry-api-key
AZURE_AI_FOUNDRY_ENDPOINT=https://your-endpoint.services.ai.azure.com/models/chat/completions?api-version=2024-05-01-preview
AZURE_AI_FOUNDRY_MODEL_NAME=Meta-Llama-3.1-8B-Instruct

# Usage Limiting Settings
USAGE_LIMITING_ENABLED=true
USAGE_DB_PATH=data/usage_tracking.json
PROMPT_LIMIT=20
TOKEN_LIMIT=0
RESET_PERIOD_HOURS=24
UNLIMITED_IPS=127.0.0.1,::1,localhost
ADMIN_IPS=127.0.0.1,::1,localhost

# API Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
ADMIN_PASSWORD=your-admin-password-change-this-in-production

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key

# Usage Limits
DAILY_USAGE_LIMIT=20

# Deployment Configuration
ENVIRONMENT=development